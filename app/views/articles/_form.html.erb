<div class="container my-form">
  

<div class="row justify-content-center">

  <div class="col-10 ">
  <%= render 'shared/errors'%>
      <%= form_with(model: @article, local: true, class: "shadow-lg p-3 mb-3 bg-primary  rounded")  do |f|%>
        <div class="form-group row text-light h4">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article"%>
          </div>
        </div>
        
        <div class="form-group row text-white h4">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article"%>
          </div>
        </div><br>
        <div class="form-group row text-center">
      <p>
          <%= f.submit class: "btn btn-outline-light btn-lg shadow-lg" %>
      </p>
        </div>
    
      <% end %>
  </div>

</div>
<div class="col text-center">
    <button type="button" class="btn btn-primary btn-md shadow-lg"><%= link_to 'Cancel and return to articles listing', articles_path, class: "btn-articles-create"%></button>
    
</div>
</div>
