<div class="container my-form">
  <% if @article.errors.any? %>
    <h2>The following errors prevented the article from being saved.</h2>
    <ul>
    <% @article.errors.full_messages.each do |msg| %>
    <li><%= msg%></li>
    <% end %>
    </ul>
  <%end%>

<div class="row justify-content-center">
  <div class="col-10 shadow-lg p-3 mb-3 bg-info rounded">
      <%= form_with(model: @article, local: true)  do |f|%>

        <div class="form-group row ">
          <%= f.label :title, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control"%>
          </div>
        </div>
        
        <div class="form-group row">
          <%= f.label :description, class: "col-2 col-form-label" %>
          <div class="col-10">
            <%= f.text_area :description, rows: 10, class: "form-control"%>
          </div>
        </div><br>
        <div class="form-group row text-center">
      <p>
          <%= f.submit class: "btn btn-outline-light btn-lg shadow-lg" %>
      </p>
        </div>

      <% end %>
  </div>

</div>
<div class="col text-center">
    <button type="button" class="btn btn-primary btn-md shadow-lg"><%= link_to 'Cancel and return to articles listing', articles_path, class: "btn-articles"%></button>
</div>
</div>
