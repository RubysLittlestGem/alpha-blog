
<body>
<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th  colspan = "3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
  <tr>
      <td class = "title"> <%#= link_to article.title, article %><%=article.title %>
      </td>
      <td class = "description"><%=article.description%>
      </td>
      <td><%= link_to 'Show', article_path(article)%> |
      </td>
      <td><%= link_to 'Edit', edit_article_path(article)%> |
      </td>
      <td class = articles><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" } %> 
      </td>
      </tr>
      <% end %>
  </tbody>
</table><br>
<p>
  <%=link_to 'Create New Article', new_article_path%>
</p>
<%= link_to 'Home', root_path%>

</body>