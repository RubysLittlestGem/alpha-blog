
<body>
<h1>Articles listing page</h1>

<table>
  <thead>
    <tr>
    <th>Title</th>
    <th>Description</th>
    <th  colspan = "3">Actions</th>
    </tr>
  </thead>

  <tbody>
  <% @articles.each do |article| %>
  <tr>
      <td class = "title"> <%#= link_to article.title, article %><%=article.title %>
      </td>
      <td class = "description"><%=article.description%>
      </td>
      <div class="btn-group" role="group" aria-label="Basic mixed styles example">
      <td id="link_show"><button type="button" class="btn btn-success"><%= link_to 'Show', article_path(article), class: "btn-show" %></button>
      </td>
      <td><button type="button" class="btn btn-warning"><%= link_to 'Edit', edit_article_path(article), class: "btn-edit"%></button>
      </td>
      <td class = articles><button type="button" class="btn btn-danger"><%= link_to 'Delete', article_path(article), data: { "turbo-method": :delete, "turbo-confirm": "Are you sure?" }, class: "btn-delete" %> </button>
      </td>
      </div>
      </tr>
      <% end %>
  </tbody>
</table><br>
<hr class="my-4">
<p>
  <button type="button" class="btn btn-primary btn-sm"><%=link_to 'Create New Article', new_article_path , class: "btn-articles-new"%></button>

</p>
<button type="button" class="btn btn-primary btn-sm"><%= link_to 'Home', root_path, class: "btn-home"%></button>

</body>
